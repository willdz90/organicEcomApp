{
  "name": "organic-ecom-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm -C apps/api start:dev\" \"pnpm -C apps/client dev\"",
    "dev:api": "pnpm -C apps/api start:dev",
    "dev:web": "pnpm -C apps/client dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v"
  }
}